{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "run-p start:*",
    "dev": "run-p dev:*",
    "build": "babel src --out-dir dist",
    "postinstall": "run-s pi:*",
    "test": "tape -r \"@babel/register\" \"test/**/*.js\" | tspec",
    "pi:backend": "npm run build",
    "pi:client": "cd client && npm install",
    "start:backend": "cross-env node ./dist",
    "start:client": "cd client && npm start",
    "dev:backend": "cross-env nodemon --watch ./src --exec babel-node ./src",
    "dev:client": "cd client && npm start"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "bn.js": "^4.11.8",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "ethereumjs-abi": "^0.6.5",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "lru-cache": "^4.1.3",
    "morgan": "^1.9.0",
    "web3": "^1.0.0-beta.34",
    "websocket": "^1.0.26"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-destructuring": "^7.1.2",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "ganache-core": "^2.1.3",
    "node-fetch": "^2.1.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.1",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1"
  }
}
