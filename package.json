{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "run-p start:*",
    "dev": "run-p dev:*",
    "build": "babel src --out-dir dist",
    "postinstall": "run-s pi:*",
    "pi:backend": "npm run build",
    "pi:client": "cd client && npm install",
    "start:backend": "cross-env node ./dist/app",
    "start:client": "cd client && npm start",
    "dev:backend": "cross-env nodemon --watch ./src --exec babel-node ./src/app",
    "dev:client": "cd client && npm start"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "cors": "^2.8.4",
    "cross-env": "^5.0.5",
    "debug": "~2.6.3",
    "express": "~4.15.2",
    "lodash": "^4.17.4",
    "morgan": "~1.8.1",
    "web3": "^1.0.0-beta.23"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.1"
  }
}
